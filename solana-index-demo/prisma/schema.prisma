datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Waitlist {
  id               String   @id @default(cuid())
  email            String   @unique
  consentMarketing Boolean  @default(false)
  ipHash           String?
  userAgent        String?
  source           String?
  createdAt        DateTime @default(now())
  verifiedAt       DateTime?

  @@index([createdAt])
}
